<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:VerticalPanel>
	    <b:Heading ui:field="sectionHeader" size="4" visible="false">Cameo Rules:</b:Heading>
	    <g:FlexTable ui:field="rulesTable">
	    </g:FlexTable>
	    <g:HorizontalPanel ui:field="addRulePanel">
	    <b:Tooltip text="English Cameo Rules only." trigger="FOCUS">
	       <b:TextBox ui:field="ruleTextBox" placeholder="Add a new rule"></b:TextBox>
	       </b:Tooltip>
	       <b:TextBox ui:field="codeTextBox"></b:TextBox>
	       <b:Button type="PRIMARY" ui:field="addRuleButton">Add this rule</b:Button>
	    </g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 